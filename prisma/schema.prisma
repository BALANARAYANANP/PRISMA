generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id      Int     @id @default(autoincrement()) @map("user_id")
  email   String  @unique
  name    String
  lname   String
  isAlive Boolean @default(true)
  age     Int

  profile Profile?
  Books   Books[]
  Subject Subject[]
  Many    Many[]

  @@unique([name, lname])
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String
  userId Int     @unique
  user   Student @relation(fields: [userId], references: [id])
}

model Books {
  id           Int      @id @default(autoincrement())
  name         String
  Book_code    Int
  content_type String   @db.Text
  createdAt    DateTime @default(now())
  userId       Int
  student      Student  @relation(fields: [userId], references: [id])

  @@index([name])
  @@map("Books")
}

model Subject {
  id        Int       @id @default(autoincrement())
  name      String
  Tutor     String
  createdAt DateTime  @default(now())
  stud_id   Int
  student   Student @relation(fields: [stud_id], references: [id])
  Many      Many[]
}

model Many {
  id      Int     @id @default(autoincrement())
  stud_id Int
  sub_id  Int
  student Student @relation(fields: [stud_id], references: [id])
  subject Subject @relation(fields: [sub_id], references: [id])
}
